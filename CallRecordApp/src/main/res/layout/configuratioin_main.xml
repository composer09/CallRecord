<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="300dp"
            android:layout_height="50dp" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <ToggleButton
                    android:id="@+id/auto_record"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textOff="OFF"
                    android:textOn="ON" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="자동 녹음" />
            </RelativeLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="300dp"
            android:layout_height="50dp" >

            <Button
                android:id="@+id/record_type_select"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/selector_option_btn" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="녹음 타입" />

                <TextView
                    android:id="@+id/record_type_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:text="" />
            </RelativeLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="300dp"
            android:layout_height="50dp" >

            <Button
                android:id="@+id/record_format_select"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/selector_option_btn" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="녹음 포맷" />

                <TextView
                    android:id="@+id/record_format_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="17dp"
                    android:text="" />
            </RelativeLayout>
        </FrameLayout>
    </LinearLayout>

</RelativeLayout>